<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.RegisterActivity"
    android:padding="30dp">

    <TextView
        android:id="@+id/register_logo_activity"
        style="@style/AppLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="Login Time "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/register_name_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UserName"
        android:inputType="text"
        android:maxLength="10"
        android:layout_alignTop="@+id/register_logo_activity"
        android:layout_marginTop="100dp" />

    <EditText
        android:id="@+id/register_email_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLength="25"
        android:layout_alignTop="@+id/register_name_activity"
        android:layout_marginTop="90dp" />

    <EditText
        android:id="@+id/register_password_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="8"
        android:inputType="textPassword"
        android:layout_alignTop="@+id/register_email_activity"
        android:layout_marginTop="94dp"
        android:hint="Password  -- 8 DIGITS " />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password_activity"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        android:hint="Preencha a sua RegiÃ£o"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <Spinner
        android:id="@+id/register_spinnerCity_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/register_password_activity"
        android:layout_marginTop="86dp" />


    <Button
        android:id="@+id/register_timer_btn"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/register_spinnerCity_activity"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_toStartOf="@+id/loginBack_Register_btn"
        android:layout_toLeftOf="@+id/loginBack_Register_btn"
        android:text="Register" />

    <Button
        android:id="@+id/loginBack_Register_btn"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/register_spinnerCity_activity"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:text="Back Login" />


</RelativeLayout>