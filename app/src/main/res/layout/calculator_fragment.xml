<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calculator.CalculatorFragment">

    <TextView
        android:id="@+id/calculator_text_result"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:gravity="center"
        android:hint="Calculator"
        android:maxLength="20"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/calculator_text_lastReso"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/calculator_text_result"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:gravity="center"
        android:hint="LastResult"
        android:maxLength="20"
        android:textAlignment="center"
        android:textSize="15dp" />

    <TableLayout
        android:id="@+id/calculate_TableLayout"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_below="@+id/calculator_text_lastReso"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="6dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/calculator_button_1"
                android:text="1"
                />

            <Button
                android:id="@+id/calculator_button_2"
                android:text="2" />

            <Button
                android:id="@+id/calculator_button_3"
                android:text="3" />

            <Button
                android:id="@+id/calculator_button_plus"
                android:text="+" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/calculator_button_4"
                android:text="4" />

            <Button
                android:id="@+id/calculator_button_5"
                android:text="5" />

            <Button
                android:id="@+id/calculator_button_6"
                android:text="6" />

            <Button
                android:id="@+id/calculator_button_minus"
                android:text="-" />

        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/calculator_button_7"
                android:text="7" />

            <Button
                android:id="@+id/calculator_button_8"
                android:text="8" />

            <Button
                android:id="@+id/calculator_button_9"
                android:text="9" />

            <Button
                android:id="@+id/calculator_button_multiply"
                android:text="x" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/calculator_button_0"
                android:text="0" />

            <Button
                android:id="@+id/calculator_button_divided"
                android:text="/" />

            <Button
                android:id="@+id/calculator_button_reset"
                android:text="C"/>

            <Button
                android:id="@+id/calculator_button_equals"
                android:text=" = " />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/calculator_button_excludeValues"
                android:text="Back"/>

        </TableRow>

    </TableLayout>


    <Button
        android:id="@+id/calculator_btn_backMain"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calculate_TableLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="5dp"
        android:text="Menu Back " />

    <Button
        android:id="@+id/calculator_btn_ArquiveResult_Main"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calculate_TableLayout"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/calculator_btn_backMain"
        android:layout_toRightOf="@+id/calculator_btn_backMain"
        android:text="Achieve Result " />




</RelativeLayout>